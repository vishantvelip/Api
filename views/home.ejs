<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Project Management</title>
  <style>
    body { margin: 0; font-family: 'Segoe UI', Arial, sans-serif; background: linear-gradient(135deg, #232526, #414345); min-height: 100vh; }
    .container { background: rgba(255,255,255,0.05); border-radius: 16px; box-shadow: 0 4px 24px rgba(0,0,0,0.2); width: 100%; max-width: 500px; margin: 40px auto; padding: 40px 32px 32px 32px; display: flex; flex-direction: column; align-items: center;}
    .hero-subtitle { color: #fff; font-size: 2rem; margin-bottom: 32px; letter-spacing: 1px;}
    .form-group { width: 100%; margin-bottom: 18px; }
    .form-group label { color: #e0e0e0; font-size: 1.05rem; margin-bottom: 6px; display: block;}
    .form-group input, .form-group textarea {
      width: 100%;
      padding: 12px;
      border-radius: 6px;
      border: none;
      background: #f3f3f3;
      font-size: 1rem;
      margin-top: 3px;
      box-sizing: border-box;
      outline: none;
      transition: box-shadow 0.2s;
    }
    .form-group input:focus, .form-group textarea:focus {
      box-shadow: 0 0 0 2px #007bff33;
      background: #fff;
    }
    .form-group textarea { resize: vertical; min-height: 80px; }
    .form-group input[type="file"] {
      border: 1px solid #ccc;
      padding: 4px;
      background: #fff;
    }
    .message {
      width: 100%;
      margin-bottom: 18px;
      padding: 12px;
      border-radius: 6px;
      text-align: center;
      font-size: 1rem;
      background: linear-gradient(90deg, #ff6a6a, #ffb86c);
      color: #fff;
      box-shadow: 0 2px 8px rgba(220,53,69,0.08);
      animation: fadeIn 0.7s;
    }
    .message.success {
      background: linear-gradient(90deg, #28a745, #84d9a2);
    }
    .actions {
      width: 100%;
      display: flex;
      justify-content: space-between;
      gap: 10px;
      margin-top: 12px;
    }
    .submit-btn, .view-btn {
      background: linear-gradient(90deg, #007bff, #00d2ff);
      color: #fff;
      padding: 12px 24px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 1rem;
      font-weight: 600;
      letter-spacing: 0.5px;
      transition: background 0.2s, transform 0.1s;
      text-decoration: none;
      text-align: center;
      box-shadow: 0 2px 8px rgba(0,123,255,0.07);
    }
    .submit-btn:hover, .view-btn:hover {
      background: linear-gradient(90deg, #0056b3, #0099cc);
      transform: translateY(-2px) scale(1.03);
    }
    @media (max-width: 600px) {
      .container { padding: 18px 6vw; }
      .actions { flex-direction: column; gap: 10px;}
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(16px);}
      to { opacity: 1; transform: translateY(0);}
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="hero-subtitle">Project Management</h2>
    <% if (message) { %>
      <div class="message <%= message.includes('successfully') ? 'success' : '' %>">
        <%= message %>
      </div>
    <% } %>
    <form action="/api/create-project" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Project Name</label>
        <input type="text" id="name" name="name" value="<%= project?.name || '' %>" required autocomplete="off">
      </div>
      <div class="form-group">
        <label for="title">Project Title</label>
        <input type="text" id="title" name="title" value="<%= project?.title || '' %>" required autocomplete="off">
      </div>
      <div class="form-group">
        <label for="description">Project Description</label>
        <textarea id="description" name="description" required><%= project?.description || '' %></textarea>
      </div>
      <div class="form-group">
        <label for="projectImg">Project Image</label>
        <input type="file" id="projectImg" name="projectImg" accept="image/jpeg,image/png">
      </div>
      <div class="actions">
        <button type="submit" class="submit-btn">Create Project</button>
        <a href="/api/api-view" class="view-btn">View Projects</a>
           <a href="/api/view" class="view-btn">View api</a>
      </div>
    </form>
  </div>
  <script>
    document.querySelector('form').addEventListener('submit', (e) => {
      const name = document.getElementById('name').value.trim();
      const title = document.getElementById('title').value.trim();
      const description = document.getElementById('description').value.trim();
      if (!name || !title || !description) {
        e.preventDefault();
        alert('All fields are required.');
      }
    });
  </script>
</body>
</html>
