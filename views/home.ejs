

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Project Management</title>
  <style>
    body { margin: 0; font-family: 'Segoe UI', Arial, sans-serif; background: linear-gradient(135deg, #29323c, #485563); min-height: 100vh; }
    .container { background: rgba(255,255,255,0.09); border-radius: 20px; box-shadow: 0 8px 32px rgba(0,0,0,0.16); width: 100%; max-width: 500px; margin: 48px auto; padding: 40px 32px 32px 32px; display: flex; flex-direction: column; align-items: center;}
    .hero-subtitle { color: #fff; font-size: 2.1rem; margin-bottom: 32px; letter-spacing: 1px; font-weight: 700; text-shadow: 0 2px 10px #1112;}
    .form-group { width: 100%; margin-bottom: 18px; }
    .form-group label { color: #e0e0e0; font-size: 1.03rem; margin-bottom: 5px; display: block; font-weight: 500; }
    .form-group input, .form-group textarea {
      width: 100%;
      padding: 12px;
      border-radius: 7px;
      border: 1.5px solid #eaeaea;
      background: #f4f8fb;
      font-size: 1.03rem;
      margin-top: 2px;
      box-sizing: border-box;
      outline: none;
      transition: box-shadow 0.22s;
    }
    .form-group input:focus, .form-group textarea:focus {
      box-shadow: 0 0 0 2px #00c6ff33;
      background: #fff;
    }
    .form-group textarea { resize: vertical; min-height: 80px; }
    .form-group input[type="file"] {
      border: 1px solid #ccc;
      padding: 4px;
      background: #fff;
    }
    .message {
      width: 100%;
      margin-bottom: 18px;
      padding: 12px;
      border-radius: 7px;
      text-align: center;
      font-size: 1rem;
      background: linear-gradient(90deg, #ff6a6a, #ffb86c);
      color: #fff;
      box-shadow: 0 2px 8px #ff6a6a11;
      animation: fadeIn 0.7s;
      font-weight: 600;
      letter-spacing: 0.2px;
    }
    .message.success {
      background: linear-gradient(90deg, #43e97b, #38f9d7);
    }
    .actions {
      width: 100%;
      display: flex;
      justify-content: space-between;
      gap: 12px;
      margin-top: 12px;
    }
    .submit-btn, .view-btn {
      background: linear-gradient(90deg, #00c6ff, #0072ff);
      color: #fff;
      padding: 12px 0;
      border: none;
      border-radius: 7px;
      cursor: pointer;
      font-size: 1.07rem;
      font-weight: 700;
      letter-spacing: 0.45px;
      transition: background 0.2s, transform 0.1s;
      text-decoration: none;
      text-align: center;
      box-shadow: 0 2px 8px #00c6ff12;
      width: 32%;
      min-width: 120px;
    }
    .submit-btn:hover, .view-btn:hover {
      background: linear-gradient(90deg, #0072ff, #00c6ff);
      transform: translateY(-2px) scale(1.03);
    }
    @media (max-width: 600px) {
      .container { padding: 20px 4vw; }
      .actions { flex-direction: column; gap: 10px;}
      .submit-btn, .view-btn { width: 100%; }
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(16px);}
      to { opacity: 1; transform: translateY(0);}
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="hero-subtitle">Project Management</h2>
    <% if (message) { %>
      <div class="message <%= message.includes('successfully') ? 'success' : '' %>">
        <%= message %>
      </div>
    <% } %>
    <form action="/api/create-project" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Project Name</label>
        <input type="text" id="name" name="name" value="<%= project?.name || '' %>" required autocomplete="off">
      </div>
      <div class="form-group">
        <label for="title">Project Title</label>
        <input type="text" id="title" name="title" value="<%= project?.title || '' %>" required autocomplete="off">
      </div>
      <div class="form-group">
        <label for="description">Project Description</label>
        <textarea id="description" name="description" required><%= project?.description || '' %></textarea>
      </div>
      <div class="form-group">
        <label for="projectImg">Project Image</label>
        <input type="file" id="projectImg" name="projectImg" accept="image/jpeg,image/png">
      </div>
      <div class="actions">
        <button type="submit" class="submit-btn">Create Project</button>
        <a href="/api/api-view" class="view-btn">View (API)</a>
        <a href="/api/view" class="view-btn">View (EJS)</a>
      </div>
    </form>
  </div>
  <script>
    document.querySelector('form').addEventListener('submit', (e) => {
      const name = document.getElementById('name').value.trim();
      const title = document.getElementById('title').value.trim();
      const description = document.getElementById('description').value.trim();
      if (!name || !title || !description) {
        e.preventDefault();
        alert('All fields are required.');
      }
    });
  </script>
</body>
</html>
