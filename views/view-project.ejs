<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>View Projects</title>
  <style>
    body { margin: 0; font-family: 'Segoe UI', Arial, sans-serif; background: linear-gradient(135deg, #232526, #414345); min-height: 100vh;}
    .container { position: relative; top: 22px; background: rgba(255,255,255,0.08); max-width: 900px; margin: 32px auto; border-radius: 16px; padding: 48px 36px 32px 36px; box-shadow: 0 6px 40px 0 #23252622;}
    .hero-subtitle { color: #fff; font-size: 2rem; text-align: center; margin-bottom: 24px; letter-spacing: 1px;}
    .message { color: #fff; background: linear-gradient(90deg,#ff6a6a,#ffb86c); padding: 11px; border-radius: 7px; margin-bottom: 17px; text-align: center; max-width: 700px; font-size: 1rem;}
    .message.success { background: linear-gradient(90deg,#28a745,#84d9a2);}
    .search-form { width: 100%; max-width: 630px; margin-bottom: 19px; display: flex; gap: 10px; flex-wrap: wrap;}
    .search-form input { flex: 1 1 200px; padding: 10px; border-radius: 5px; border: none; background: #f3f3f3; font-size: 1rem;}
    .search-form button { padding: 10px 20px; background: linear-gradient(90deg,#007bff,#00d2ff); color: #fff; border: none; border-radius: 5px; cursor: pointer; font-size: 1rem; font-weight: bold;}
    .search-form button:hover { background: linear-gradient(90deg,#0056b3,#0099cc);}
    .back-btn { background: linear-gradient(90deg,#28a745,#84d9a2); color: #fff; font-weight: 600; padding: 10px 22px; border: none; border-radius: 6px; cursor: pointer; font-size: 1rem; text-decoration: none; margin-bottom: 16px; display: inline-block;}
    .back-btn:hover { background: linear-gradient(90deg,#218838,#43e97b);}
    .project-list { max-width: 900px; width: 100%; padding: 0px; margin: 0 auto;}
    .project-card {
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 2px 18px rgba(0,0,0,0.09);
      margin-bottom: 18px;
      padding: 18px 22px;
      display: flex;
      align-items: center;
      gap: 20px;
      flex-wrap: wrap;
      animation: fadeIn 0.6s;
    }
    .project-card img { max-width: 160px; width: 100%; height: 110px; object-fit: cover; border-radius: 6px; background: #eee;}
    .project-details { flex: 1; min-width: 180px;}
    .project-details h3 { margin: 0 0 7px; color: #313131; font-size: 1.15rem;}
    .project-details p { margin: 6px 0; color: #4a4a4a;}
    .action-buttons { display: flex; gap: 10px; margin-top: 12px;}
    .edit-btn, .delete-btn {
      padding: 8px 18px;
      border: none; border-radius: 5px; cursor: pointer; font-size: 0.95rem; text-decoration: none; text-align: center; font-weight: 500;
      transition: background 0.2s;
    }
    .edit-btn { background: linear-gradient(90deg,#007bff,#00d2ff); color: white;}
    .edit-btn:hover { background: linear-gradient(90deg,#0056b3,#0099cc);}
    .delete-btn { background: linear-gradient(90deg,#dc3545,#ff6a6a); color: white;}
    .delete-btn:hover { background: linear-gradient(90deg,#c82333,#ff6a6a);}
    @media (max-width: 700px) {
      .container { padding: 16px 2vw;}
      .project-card { flex-direction: column; align-items: flex-start;}
      .project-card img { max-width: 100%; height: 180px;}
    }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(16px);} to { opacity: 1; transform: translateY(0);}
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="hero-subtitle">Your Projects</h2>
    <% if (message) { %>
      <div class="message <%= message.includes('successfully') ? 'success' : '' %>">
        <%= message %>
      </div>
    <% } %>
    <form action="/api/view" method="get" class="search-form">
      <input type="text" name="search" placeholder="Search by project name or title" value="<%= searchQuery || '' %>">
      <button type="submit">Search</button>
    </form>
    <a href="/" class="back-btn">Back to Home</a>
    <div class="project-list">
      <% if (projects && projects.length > 0) { %>
        <% projects.forEach(project => { %>
          <div class="project-card">
            <% if (project.projectImg) { %>
              <img src="/<%= project.projectImg %>" alt="<%= project.name %>" onerror="this.src='/uploads/placeholder.jpg'">
            <% } else { %>
              <img src="/uploads/placeholder.jpg" alt="No image">
            <% } %>
            <div class="project-details">
              <h3><%= project.name %></h3>
              <p><strong>Title:</strong> <%= project.title %></p>
              <p><strong>Description:</strong> <%= project.description %></p>
              <p><strong>Created:</strong> <%= project.createdAt.toLocaleDateString() %></p>
              <div class="action-buttons">
                <a href="/api/edit/<%= project._id %>" class="edit-btn">Edit</a>
                <form action="/api/delete/<%= project._id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this project?');" style="display:inline;">
                  <button type="submit" class="delete-btn">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p style="color: #fff; text-align:center;">No projects found.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
