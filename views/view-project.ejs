

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>View Projects</title>
  <style>
    body { margin: 0; font-family: 'Segoe UI', Arial, sans-serif; background: linear-gradient(135deg, #29323c, #485563); min-height: 100vh;}
    .container { position: relative; top: 22px; background: rgba(255,255,255,0.11); max-width: 900px; margin: 32px auto; border-radius: 18px; padding: 58px 36px 32px 36px; box-shadow: 0 8px 40px 0 #23252622;}
    .hero-subtitle { color: #fff; font-size: 2.1rem; text-align: center; margin-bottom: 24px; letter-spacing: 1.2px; font-weight: 700; text-shadow: 0 2px 10px #1312;}
    .message { color: #fff; background: linear-gradient(90deg,#ff5858,#fb8c00); padding: 13px; border-radius: 8px; margin-bottom: 17px; text-align: center; max-width: 700px; font-size: 1.07rem; font-weight: 600;}
    .message.success { background: linear-gradient(90deg,#43e97b,#38f9d7);}
    .search-form { width: 100%; max-width: 630px; margin-bottom: 23px; display: flex; gap: 12px; flex-wrap: wrap;}
    .search-form input { flex: 1 1 200px; padding: 12px; border-radius: 6px; border: none; background: #f3f3f3; font-size: 1.03rem;}
    .search-form button { padding: 12px 26px; background: linear-gradient(90deg,#00c6ff,#0072ff); color: #fff; border: none; border-radius: 6px; cursor: pointer; font-size: 1.02rem; font-weight: bold;}
    .search-form button:hover { background: linear-gradient(90deg,#0072ff,#00c6ff);}
    .back-btn { background: linear-gradient(90deg,#43e97b,#38f9d7); color: #fff; font-weight: 700; padding: 12px 30px; border: none; border-radius: 8px; cursor: pointer; font-size: 1.05rem; text-decoration: none; margin-bottom: 18px; display: inline-block;}
    .back-btn:hover { background: linear-gradient(90deg,#218838,#43e97b);}
    .project-list { max-width: 900px; width: 100%; margin: 0 auto;}
    .project-card {
      background: #fff;
      border-radius: 12px;
      box-shadow: 0 2px 20px #0001;
      margin-bottom: 22px;
      padding: 21px 30px;
      display: flex;
      align-items: center;
      gap: 28px;
      flex-wrap: wrap;
      animation: fadeIn 0.6s;
    }
    .project-card img { max-width: 160px; width: 100%; height: 110px; object-fit: cover; border-radius: 7px; background: #eee;}
    .project-details { flex: 1; min-width: 180px;}
    .project-details h3 { margin: 0 0 8px; color: #1b263b; font-size: 1.19rem;}
    .project-details p { margin: 6px 0; color: #444; font-size: 0.98rem;}
    .action-buttons { display: flex; gap: 12px; margin-top: 12px;}
    .edit-btn, .delete-btn {
      padding: 9px 22px;
      border: none; border-radius: 6px; cursor: pointer; font-size: 1.01rem; text-decoration: none; text-align: center; font-weight: 600;
      transition: background 0.18s;
    }
    .edit-btn { background: linear-gradient(90deg,#00c6ff,#0072ff); color: white;}
    .edit-btn:hover { background: linear-gradient(90deg,#0072ff,#00c6ff);}
    .delete-btn { background: linear-gradient(90deg,#ff5858,#fb8c00); color: white;}
    .delete-btn:hover { background: linear-gradient(90deg,#d32f2f,#ffa000);}
    @media (max-width: 700px) {
      .container { padding: 16px 2vw;}
      .project-card { flex-direction: column; align-items: flex-start;}
      .project-card img { max-width: 100%; height: 180px;}
    }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(16px);} to { opacity: 1; transform: translateY(0);}
    }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="hero-subtitle">Your Projects</h2>
    <% if (message) { %>
      <div class="message <%= message.includes('successfully') ? 'success' : '' %>">
        <%= message %>
      </div>
    <% } %>
    <form action="/api/view" method="get" class="search-form">
      <input type="text" name="search" placeholder="Search by project name or title" value="<%= searchQuery || '' %>">
      <button type="submit">Search</button>
    </form>
    <a href="/" class="back-btn">Back to Home</a>
    <div class="project-list">
      <% if (projects && projects.length > 0) { %>
        <% projects.forEach(project => { %>
          <div class="project-card">
            <% if (project.projectImg) { %>
              <img src="/<%= project.projectImg %>" alt="<%= project.name %>" onerror="this.src='/uploads/placeholder.jpg'">
            <% } else { %>
              <img src="/uploads/placeholder.jpg" alt="No image">
            <% } %>
            <div class="project-details">
              <h3><%= project.name %></h3>
              <p><strong>Title:</strong> <%= project.title %></p>
              <p><strong>Description:</strong> <%= project.description %></p>
              <p><strong>Created:</strong> <%= project.createdAt.toLocaleDateString() %></p>
              <div class="action-buttons">
                <a href="/api/edit/<%= project._id %>" class="edit-btn">Edit</a>
                <form action="/api/delete/<%= project._id %>" method="post" onsubmit="return confirm('Are you sure you want to delete this project?');" style="display:inline;">
                  <button type="submit" class="delete-btn">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p style="color: #fff; text-align: center;">No projects found.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
